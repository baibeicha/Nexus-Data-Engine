# Database Configuration
DB_USERNAME=nexus
DB_PASSWORD=nexus_password

# JWT Configuration
JWT_SECRET=your-256-bit-secret-key-here-must-be-at-least-32-characters-long
ACCESS_EXPIRATION=3600000
REFRESH_EXPIRATION=86400000

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:9092

# Eureka Configuration
EUREKA_SERVER_URL=http://discovery-service:8761/eureka
EUREKA_CLIENT_REGISTER=true
EUREKA_INSTANCE_PREFER_IP_ADDRESS=true

# Consumer Groups
CONSUMER_GROUP_CORE=core-service-group
CONSUMER_GROUP_DATA_PROCESSOR=data-processor-service-group
CONSUMER_GROUP_SYNC=sync-service-group

# Storage Paths
NEXUS_STORAGE_PATH_CORE=./nexus_storage
NEXUS_STORAGE_PATH_PROCESSOR=./nexus_storage/temp_imports
NEXUS_STORAGE_DOWNLOAD_BASE_URL=http://data-processor:8082/api/internal/files

# Time Parser
TIME_PARSER_SEPARATOR=" "
